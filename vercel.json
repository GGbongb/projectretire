{
  "version": 2,
  "name": "retirement-app",
  "builds": [
    {
      "src": "retirement-calculator/package.json",
      "use": "@vercel/static-build",   
      "config": { "distDir": "retirement-calculator/build" }
    },
    {
      "src": "server/server.js",
      "use": "@vercel/node"  
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",   
      "dest": "/server/server.js"
    },
    {
      "src": "/(.*)",   
      "dest": "/retirement-calculator/build/$1"
    }
  ]
}
